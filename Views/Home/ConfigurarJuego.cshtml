@{
    ViewData["Title"] = "Home Page";
}

<main class="pagina-login-register">
<h1 class="titulo">Nehuentados</h1>
<section class="seccion-configurar">
    <div class="container">
        <h1>Crear partida</h1>
        <form action='@Url.Action("CrearPartida", "Home")' method="post">
            <select class="form-select form-select-lg mb-3 select-tiempo" name="tiempoMax" required>
                <option selected disabled value="">Tiempo máximo</option>
                <option value="15">15 segundos</option>
                <option value="30">30 segundos</option>
                <option value="45">45 segundos</option>
                <option value="60">1 minuto</option>
            </select>
            <select class="form-select form-select-lg mb-3 select-tiempo" name="dificultad" required>
                <option selected disabled value="">Dificultad</option>
                @foreach(Dificultades dificultad in ViewBag.dificultades)
                {
                    <option value=@dificultad.IdDificultad>@dificultad.Nombre</option>
                }
            </select>
            <input class="switch-secreto" id="girarNehuen" type="checkbox" value="true" name="girarNehuen" />
            <input type="hidden" value="false" name="girarNehuen"/>
            <button type="submit" class="login-boton">Crear</button>
        </form>
    </div>
    <div class="container">
        <h1>Unirse a partida</h1>
        <form action='@Url.Action("Unirse", "Home")' method="post">
            <div class="form-floating mb-3">
                <input type="number" class="form-control input-codigo" id="floatingInput" autocomplete="off" placeholder="" name="codigo" required>
                <label for="floatingInput">Código</label>
            </div> 
            @Html.Raw(ViewBag.error)
            <button type="submit" class="login-boton">Unirse</button>
        </form>
    </div>
</section>
</main>